#include <iostream>

using namespace std;

void rec(int num, int space) {
    if (num == 0) {
        return;
    }

    for (int i = 0; i < space; i++) {
        cout << " ";
    }

    for (int i = num; i >= 1; i--) {
        cout << i;
    }

    cout << endl;

    rec(num - 1, space + 1);
}

int main() {
    rec(5, 0);
    for (int i = 2; i < 6; i++) {
        for (int j = 0; j < 4; j++) cout << " ";
        for (int k = 1; k <= i; k++) cout << k;
        cout << endl;
    }

    return 0;
}
